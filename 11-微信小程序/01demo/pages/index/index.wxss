/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.banner{
	width: 100%;
}
.banner image {
	width: 100%;
}
.list{
	/* rpx  1px = 2rpx */
	/* 规定屏幕宽度为750rpx, 就是把屏幕分成750份 */
	padding: 40rpx;
}
.prod{
	display: flex;
	justify-content: space-between;
	margin-bottom: 20rpx;
}
.item-right{
	width: 67%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.title{
	font-size: 40rpx;
}
.desc{
	color: aqua;
}
.item-right view{
	/* padding: 0 10rpx; */
}
.item-right image{
	height: 55rpx;
	margin-right: 20rpx;
}
.prod image{
	width: 30%;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
