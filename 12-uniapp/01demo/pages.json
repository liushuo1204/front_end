      },
      {
        "text": "我的",
        "pagePath": "pages/mine/mine",
        "iconPath": "static/category-sel.png",
        "selectedIconPath": "static/category.png"
      },
      {
        "text": "聊天",
        "pagePath": "pages/chat/chat",
        "iconPath": "static/category-sel.png",
        "selectedIconPath": "static/category.png"
      }
    ]
  },
  "uniIdRouter": {}
